@{
    ViewBag.Title = "HeadCountCreate";
    Layout = "~/Views/Shared/_layout.cshtml";
}
@model NI.Apps.Hr.HrBase.Models.HeadcountActivity.HeadCountCreateModel

<fieldset id="headcount_field" style="display:block;">
    <legend style="font-weight:bold;">Headcount_Detail</legend>

    <div id="headcount_create">
        @using (Html.BeginForm("Create", "HeadCount", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID)
            
            <table id="headcount_table" style="width:90%; border-collapse:collapse;">
                <tr>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">HC Code:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.TextBoxFor(model => model.Code, new { @class = "box_for_create", style = "font-size:18px; line-height:1.4;" })
                        @Html.ValidationMessageFor(model => model.Code)

                    </td>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">Position:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.TextBoxFor(model => model.Position, new { @class = "box_for_create", style = "font-size:18px; line-height:1.4;" })
                        @Html.ValidationMessageFor(model => model.Position)

                    </td>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">Number:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.TextBoxFor(model => model.Number, new { @class = "box_for_create", style = "font-size:18px; line-height:1.4;" })
                        @Html.ValidationMessageFor(model => model.Number)

                    </td>
                </tr>
                <tr>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">CostCenter:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.DropDownListFor(model => model.CostCenter, ViewData["CostCenter"] as SelectList, "--Select--", new { @class = "box_for_create", style = "font-size:18px; line-height:1.4;" })
                        @Html.ValidationMessageFor(model => model.CostCenter)

                    </td>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">Department:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.DropDownListFor(model => model.Department, ViewData["Department"] as SelectList, "--Select--", new { @class = "box_for_create", style = "font-size:18px; line-height:1.4;" })
                        @Html.ValidationMessageFor(model => model.Department)

                    </td>
                    <td class="hc-attr-name" style="width:14%; text-align:right;">Internal Level:</td>
                    <td class="hc-attr-value" style="width:14%; text-align:left;">
                        @Html.DropDownListFor(model => model.InternalLevel, ViewData["InternalLevel"] as SelectList, "--Select--", new { @class = "box_for_create", style = "font-size:18px; line-height:1.5;" })
                        @Html.ValidationMessageFor(model => model.InternalLevel)

                    </td>
                </tr>
            </table>

            <p style="width:90%; text-align:right;">
                <input name="CreateBtn" type="submit" value="Create HeadCount" class="btn box_for_create" style="font-size:18px; line-height:1.4;" />
            </p>
        }
    </div>
</fieldset>

<fieldset style="display:block; margin-top:10px; margin-bottom:0px;">
    <legend style="font-weight:bold;">Offer List</legend>

    <div class="offerList" style="height:570px; border:1px solid grey;">
        <table id="offers_table" border="1" rules="all" style="width:91%; border-collapse:collapse; table-layout:fixed; ">
            <tr style="height:18px;">
                <th>Candidate Name</th>
                <th>Recruiment Type</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Onboarding Date</th>
                <th>Probation Due Date</th>
                <th>Status</th>
            </tr>
            <tbody id="tbody"></tbody>
        </table>
    </div>
</fieldset>