                <td class="hc-attr-value" style="width:21%; text-align:left;">
                    @Html.DisplayFor(model => model.Offer.RecruitType)
                    @Html.HiddenFor(model => model.Offer.RecruitType)
                </td>

                <td class="hc-attr-name" style="width:21%; text-align:right;">Channel:</td>
                <td class="hc-attr-value" style="width:21%; text-align:left;">
                    @Html.DisplayFor(model => model.Offer.Channel)
                    @Html.HiddenFor(model => model.Offer.Channel)
