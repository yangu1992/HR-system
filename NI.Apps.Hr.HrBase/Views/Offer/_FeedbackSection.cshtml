@model NI.Apps.Hr.HrBase.Models.OfferActivity.OfferDetailModel

<fieldset>
    <legend style="font-weight:bold;">Feedback Update</legend>
    <table>
        <tr>
            <td style="border:0;">
                1. Upload the personal information form:
                @using (Html.BeginForm("UploadPersonalInfoForm", "Offer",
                        new { offerID = Model.ID },
                        FormMethod.Post,
                        new { id = "upload_File_Form", enctype = "multipart/form-data", style = "display:inline" }))
                {
                    <input type="file" id="fileName" name="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel" style="display:inline;">
                    <input id="uploadBtn" type="button" value="Upload" style="display:inline;">
                }
                @if (Model.UploadFormPath != null)
                {
                    <img id="uploadFormStatus" src="~/Images/accept.png" alt="Uploaded" />
                }
                <img id="uploadFormStatus" src="data:image/png;base64," alt="Uploaded" style="visibility:hidden" />
            </td>
        </tr>
        <tr>
            <td style="border:0;">
                2. Send Email to IT team: <input id="sendRequestBtn" type="button" value="Send">
                @if (Model.EmailITCompleted != null)
                {
                    <img id="emailITStatus" src="~/Images/accept.png" alt="email IT finished" />
                }
                <img id="emailITStatus" src="~/Images/accept.png" alt="email IT finished" style="visibility:hidden" />
            </td>
        </tr>
        <tr>
            <td style="border:0;">
                3. Sync with Address book. Please input below value and click on "Sync".
            </td>
        </tr>
        <tr>
            <td style="padding-left:58px;border:0;">
                <span>Domain Login: </span><input id="address_book_domain" type="text">
            </td>
        </tr>
        <tr>
            <td style="padding-left:17px;border:0;">
                <span>Contract Start Date: </span><input id="start_date" class="Date" type="text" >
                <input id="syncBtn" type="button" value="Sync">
                @if (Model.SyncDomainCompleted != null)
                {
                    <img id="syncDomainStatus" src="~/Images/accept.png" alt="sync Domain finished" />
                }
                <img id="syncDomainStatus" src="~/Images/accept.png" alt="sync Domain finished" style="visibility:hidden" />
            </td>
        </tr>
        <tr>
            <td style="border:0;">
                4. Send Welcome Emails to candidate and Department Manger.
            </td>
        </tr>
        <tr>
            <td style="padding-left:17px;border:0;">
                Email To cadidate: <input id="emailCandidateBtn" type="button" value="Send">
                @if (Model.WelcomeCandidateCompleted != null)
                {
                    <img id="welcomeCandidateStatus" src="~/Images/accept.png" alt="welcome email to candidate finished" />
                }
                <img id="welcomeCandidateStatus" src="~/Images/accept.png" alt="welcome email to candidate finished" style="visibility:hidden" />
            </td>
        </tr>
        <tr>
            <td style="padding-left:17px;border:0;">
                Email To Department Manager: <input id="emailMgrBtn" type="button" value="Send">
                @if (Model.WelcomeToMgrCompleted != null)
                {
                    <img id="welcomeToMgrStatus" src="~/Images/accept.png" alt="welcome to manager finished" />
                }
                <img id="welcomeToMgrStatus" src="~/Images/accept.png" alt="welcome to manager finished" style="visibility:hidden" />
            </td>
        </tr>
    </table>

</fieldset>