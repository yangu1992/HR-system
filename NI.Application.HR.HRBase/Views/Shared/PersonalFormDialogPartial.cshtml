@model NI.Application.HR.HRBase.Models.OfferActivity.PersonalInfoFormModel
@{
   Layout = null;
}

<table id="personal_Form_table">
    <tr>
        <td colspan="8" style="font-weight:bolder">个人信息/Personal Info</td>
    </tr>
    <tr>
        <td>中文姓</td>
        <td id="PersonalInfo_ChineseFName">@Html.DisplayFor(model => model.PersonalInfo.ChineseFName)</td>
        <td>中文名</td>
        <td id="PersonalInfo_ChineseGName">@Html.DisplayFor(model => model.PersonalInfo.ChineseGName)</td>
        <td>性别</td>
        <td id="PersonalInfo_Gender">@Html.DisplayFor(model => model.PersonalInfo.Gender)</td>
        <td>婚姻状况</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.MaritalStatus)</td>
    </tr>
    <tr>
        <td>英文姓</td>
        <td id="PersonalInfo_EnglishFName">@Html.DisplayFor(model => model.PersonalInfo.EnglishFName)</td>
        <td>英文名/拼音</td>
        <td id="PersonalInfo_EnglishGName">@Html.DisplayFor(model => model.PersonalInfo.EnglishGName)</td>
        <td>出生日期</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.BirthDate)</td>
        <td>身份证/护照号</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.ID)</td>
    </tr>
    <tr>
        <td>国籍</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.Nationality)</td>
        <td>户口所在地</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.Hukou)</td>
        <td>户口性质</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.HukouType)</td>
        <td>档案所在地</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.FileLocation)</td>
    </tr>
    <tr>
        <td>居住地址</td>
        <td colspan="5">@Html.DisplayFor(model => model.PersonalInfo.HomeAddress)</td>
        <td>邮政编码</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.PostCode)</td>     
    </tr>
    <tr>
        <td>联系电话</td>
        <td id="PersonalInfo_Phone">@Html.DisplayFor(model => model.PersonalInfo.Phone)</td>
        <td >个人邮箱</td>
        <td id="PersonalInfo_Email">@Html.DisplayFor(model => model.PersonalInfo.Email)</td>
        <td>紧急联系人</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.EmergencyContact)</td>
        <td>紧急联系人电话</td>
        <td>@Html.DisplayFor(model => model.PersonalInfo.EmergencyContactPhone)</td>
    </tr>
    <tr>
        <td colspan="8" style="font-weight:bolder">教育背景</td>
    </tr>
    <tr>
        <td colspan="3">起止年月</td>
        <td colspan="2">院校</td>
        <td colspan="2">专业</td>
        <td>学位</td>
    </tr>
    @foreach (var item in Model.EduInfo)
    {
        <tr>
            <td colspan="3">@item.StartDate - @item.EndDate</td>
            <td colspan="2">@item.School</td>
            <td colspan="2">@item.Major</td>
            <td>@item.Degree</td>
        </tr>
    }
    <tr>
        <td colspan="8" style="font-weight:bolder">工作经历</td>
    </tr>
    <tr>
        <td colspan="3">就职时间</td>
        <td colspan="2">就职公司</td>
        <td colspan="2">部门</td>
        <td>职务</td>
    </tr>
    @foreach (var item in Model.WorkExperienceInfo)
    {
        <tr>
            <td colspan="3">@item.StartDate - @item.EndDate</td>
            <td colspan="2">@item.Employer</td>
            <td colspan="2">@item.Department</td>
            <td>@item.Position</td>
        </tr>
    }
    <tr>
        <td colspan="8" style="font-weight:bolder">主要家庭成员</td>
    </tr>
    <tr>
        <td>名字</td>
        <td colspan="2">关系</td>
        <td colspan="2">就职公司</td>
        <td colspan="2">部门</td>
        <td>职务</td>
    </tr>
    @foreach (var item in Model.FamilyMemInfo)
    {
        <tr>
            <td>@item.FullName</td>
            <td colspan="2">@item.Relations</td>
            <td colspan="2">@item.Employer</td>
            <td colspan="2">@item.Department</td>
            <td>@item.Position</td>
        </tr>
    }
    <tr>
        <td colspan="8" style="font-weight:bolder">子女信息</td>
    </tr>
    <tr>
        <td colspan="3">名字</td>       
        <td colspan="2">性别</td>
        <td colspan="2">出生日期</td>
    </tr>
    @foreach (var item in Model.ChildsInfo)
    {
        <tr>
            <td colspan="3">@item.FullName</td>
            <td colspan="2">@item.Gender</td>
            <td colspan="2">@item.BirthDate</td>
        </tr>
    }
    <tr>
        <td style="font-weight:bolder">入职部门</td>
        <td colspan="2">@Model.Department</td>
        <td style="font-weight:bolder">职位</td>
        <td colspan="2">@Model.Position</td>
        <td style="font-weight:bolder">计划入职时间</td>
        <td id="TentativeOnboardDate">@Model.TentativeOnboardDate</td>
    </tr>
</table>