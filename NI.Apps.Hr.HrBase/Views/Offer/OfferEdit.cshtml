        //}

        var status = $("#Salary_bonus").is(":checked");
        if (status == false) {
            $(".bonus_section").hide();
        }

        var recruitmentType = $("#Offer_RecruitType").val();
        if (recruitmentType == 'Campus') {
            $(".attr_for_social").show();
        } else {
            $(".attr_for_social").hide();
        }
    });
</script>
