            <tr>
                <td class="hc-attr-name" style="width:21%; text-align:right;">Salary:</td>
                <td class="hc-attr-value" style="width:21%; text-align:left;">
                    @Html.DisplayFor(model => model.Salary.Salary)
                    @Html.HiddenFor(model => model.Salary.Salary)
                </td>
            </tr>
        </table>
    </div>
</div>